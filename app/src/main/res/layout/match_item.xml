<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azure"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/first_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Страна"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id = "@+id/second_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Страна"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_country"
        />

    <TextView
        android:id = "@+id/command_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Команда"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/vs"
        app:layout_constraintStart_toEndOf="@+id/vs"
        app:layout_constraintBottom_toBottomOf="@+id/vs"/>

    <ImageView
        android:id="@+id/second_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/command_2"
        app:layout_constraintTop_toTopOf="@+id/command_2"
        app:layout_constraintBottom_toBottomOf="@+id/command_2"
        />

    <TextView
        android:id = "@+id/command_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Команда"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginEnd ="5dp"
        app:layout_constraintTop_toTopOf="@+id/vs"
        app:layout_constraintEnd_toStartOf="@+id/vs"
        app:layout_constraintBottom_toBottomOf="@+id/vs"/>

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@+id/command_1"
        app:layout_constraintTop_toTopOf="@+id/command_1"
        app:layout_constraintBottom_toBottomOf="@+id/command_1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id = "@+id/blocked_window"
        android:background="@color/transparent_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>